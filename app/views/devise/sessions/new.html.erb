<h2>Sign in</h2>

<%= semantic_form_for(resource, :as => resource_name, :url => session_path(resource_name), :validate => true) do |f| %>
  <%= f.inputs do %>
    <%= f.input :username %>
    <%= f.input :password, :as => :password %>
    <% if devise_mapping.rememberable? -%>
      <%= f.input :remember_me, :as => :boolean %>
    <% end -%>
  <% end -%>

  <%= f.actions do %>
    <%= f.action :submit, :as => :input, :label => 'Sign In' %>
  <% end %>
<% end %>

<%= render "devise/shared/links" %>
